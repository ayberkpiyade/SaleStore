@model SaleStore.Models.Campaign

@{
    ViewData["Title"] = "Kampanya Düzenle";
}

<h2>Kampanya Düzenle</h2>

<form asp-action="Edit"  method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreateDate)
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.UpdateDate)
        @Html.HiddenFor(model => model.UpdatedBy)
    </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Slogan" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Slogan" class="form-control" />
                <span asp-validation-for="Slogan" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CampaignStartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CampaignStartDate" class="form-control" />
                <span asp-validation-for="CampaignStartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CampaignEndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CampaignEndDate" class="form-control" />
                <span asp-validation-for="CampaignEndDate" class="text-danger"></span>
            </div>
        </div>

    <input type="hidden" asp-for="Image" tabindex="1" value="@Model.Image" />
    <div class="form-group">
        <label asp-for="Image" class="col-md-2 control-label"></label>
        <div class="col-md-8">
            <input asp-for="Image" type="file" name="uploadFile" class="form-control" />
            <div class="clearfix margin-top-10">
                <span class="label label-success">UYARI !</span> Dosyanın uzantısı <strong>.jpg, .gif</strong> ya da <strong>.png</strong> olmalıdır.
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
        </div>
     
</form>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
