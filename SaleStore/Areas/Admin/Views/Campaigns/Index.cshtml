@model IEnumerable<SaleStore.Models.Campaign>

@{
    ViewData["Title"] = "Kampanya Ekle";
}

<link href="/metronic/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />


<h2>Kampanya Ekle</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Kampanya Ekle</a>
</p>
<table class="table table-striped table-bordered table-hover" id="tblRecords">
    <thead>
        <tr>
            <th class="all">
                @Html.DisplayName("Kampanya Resmi")
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.Slogan)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.CampaignStartDate)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.CampaignEndDate)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th data-orderable="false" class="all dt-right ">
            Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/@item.Image" class="img-thumbnail" style="width:100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slogan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CampaignStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CampaignEndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td class="text-nowrap text-right">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

