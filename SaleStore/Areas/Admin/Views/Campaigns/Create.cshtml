@model SaleStore.Models.Campaign

@{
    ViewData["Title"] = "Kampanya Oluştur";
}
<link href="/metronic/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />

<h2>Kampanya Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="Image" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input title="uploadFile" type="file" name="uploadFile" class="form-control" />
                        @Html.ValidationMessage("Image", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Slogan" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Slogan" class="form-control" />
                        <span asp-validation-for="Slogan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CampaignStartDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="CampaignStartDate" class="form-control" />
                        <span asp-validation-for="CampaignStartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CampaignEndDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="CampaignEndDate" class="form-control" />
                        <span asp-validation-for="CampaignEndDate" class="text-danger"></span>
                    </div>
                </div>
                -
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
