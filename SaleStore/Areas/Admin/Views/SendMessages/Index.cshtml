@model IEnumerable<SaleStore.Models.SendMessage>

@{
    ViewData["Title"] = "Giden Mesajlar";
}

<br />
<div class="row">
    <div class="col-md-12 col-xs-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Giden Mesajlar</span>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="tblRecords">
                    <thead>
                        <tr>
                            <th class="all">
                                @Html.DisplayNameFor(model => model.Subject)
                            </th>
                            <th class="all">
                                @Html.DisplayNameFor(model => model.BodyContent)
                            </th>
                            <th class="none">
                                @Html.DisplayNameFor(model => model.CreateDate)
                            </th>
                            <th class="none">
                                @Html.DisplayNameFor(model => model.CreatedBy)
                            </th>
                            <th class="none">
                                @Html.DisplayNameFor(model => model.UpdatedBy)
                            </th>
                            <th class="none">
                                @Html.DisplayNameFor(model => model.UpdateDate)
                            </th>
                            <th class="all">
                                @Html.DisplayNameFor(model => model.MailSetting)
                            </th>
                            <th data-orderable="false" class="all  ">
                                Eylemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BodyContent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MailSetting.FromAddress)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                            Actions
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-right" role="menu">
                                            <li>
                                                <a asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fa fa-pencil-square-o"></i> Düzenle
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fa fa-info"></i> Detaylar
                                                </a>
                                            </li>
                                            

                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
