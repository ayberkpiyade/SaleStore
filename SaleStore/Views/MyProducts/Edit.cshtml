@model SaleStore.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container main-container headerOffset">
    <h2>Ürünü Düzenle</h2>
    <hr />

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ProductImage" class="form-control" value="@Model.ProductImage" />
        <input type="hidden" asp-for="CreateDate" class="form-control" value="@Model.CreateDate" />
        <input type="hidden" asp-for="CreatedBy" class="form-control" value="@Model.CreatedBy" />
        <input type="hidden" asp-for="UpdatedBy" class="form-control" value="@Model.UpdatedBy" />
        <input type="hidden" asp-for="UpdateDate" class="form-control" value="@DateTime.Now" />




        <!-- left column -->
        <div class="col-lg-5 col-md-5 col-sm-5">
            <!-- product Image and Zoom -->

            <div class="main-image sp-wrap col-lg-12 no-padding">

                <div class="form-group">

                    <img src="/@Html.DisplayFor(model => model.ProductImage)" class="img-responsive img-thumbnail" alt="img" style="max-height:300px;">
                </div>
                <div class="form-group">

                    <label asp-for="ProductImage"></label>


                    <input title="uploadFile" type="file" name="uploadFile" class="form-control" accept="image/gif,image/jpg,image/jpeg,image/png" />
                    @Html.ValidationMessage("Image", new { @class = "text-danger" })

                    <span>@Model.ProductImage</span>
                </div>
            </div>
        </div>
        <!--/ left column end -->
        <!-- right column -->
        <div class="col-lg-7 col-md-7 col-sm-7">
            <div class="form-group">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Name" class="control-label"></label>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">  </div>
                        <div class="col-md-4">
                            <label asp-for="UnitPrice" class="control-label"></label>
                            <input asp-for="UnitPrice" class="form-control" />
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>
                        <div class="col-md-5">
                            <label asp-for="SalePrice" class="control-label"></label>
                            <input asp-for="SalePrice" class="form-control" />
                            <span asp-validation-for="SalePrice" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="CategoryId" cclass="control-label"></label>
                        </div>
                        <div class="col-md-9">

                            <select asp-for="CategoryId" class="form-control " asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="CompanyId" cclass="control-label"></label>
                        </div>
                        <div class="col-md-9">
                            <select asp-for="CompanyId" class="form-control " asp-items="ViewBag.CompanyId"></select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Details" class="control-label"></label>
                        </div>
                        <div class="col-md-9">
                            <textarea rows="5" asp-for="Details" class="form-control"></textarea>

                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-4">
                            <label asp-for="SaleStarthDate" class="control-label"></label>
                            <input asp-for="SaleStarthDate" class="form-control" />
                            <span asp-validation-for="SaleStarthDate" class="text-danger"></span>
                        </div>



                        <div class="col-md-5">
                            <label asp-for="SaleEndDate" class="control-label"></label>
                            <input asp-for="SaleEndDate" class="form-control" />
                            <span asp-validation-for="SaleEndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="clear"></div>
                <div style="clear:both"></div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9" style="padding:5px;">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                        <a class="btn btn-primary" asp-action="Index">Vazgeç</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
<!--/.row-->


<div style="clear:both"></div>

</div>


<!-- /main-container -->


<div class="gap"></div>



<!-- Modal review start -->
<!-- /.Modal review -->
