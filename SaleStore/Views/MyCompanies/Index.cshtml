@model IEnumerable<SaleStore.Models.Company>

@{
    ViewData["Title"] = "Firmalar";
}


<br />

<div class="row headerOffset" style="padding-top:80px;padding-left:30px;padding-right:30px;">
    <div class="col-md-12 col-xs-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light  ">
          
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            @*<div class="btn-group">
                                <a asp-action="Create" class="btn sbold green">
                                    Yeni Ekle
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>*@
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="tblRecords">
                    <thead>
                        <tr>
                             
                            <th class="all">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="all">
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th class="all">
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th class="none">
                                @Html.DisplayNameFor(model => model.Logo)
                            </th>
                     
                            <th data-orderable="false" class="all dt-right ">
                                Eylemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Logo)
                                </td>
                               
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-xs blue dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                            Eylemler
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-right" role="menu">
                                            <li>
                                                <a asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fa fa-pencil-square-o"></i> Düzenle
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fa fa-info"></i> Detaylar
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="fa fa-times "></i> Sil
                                                </a>
                                            </li>

                                        </ul>
                                    </div>
                                </td>
                            </tr>
                             
                        }
                        
                    </tbody>
                    
                </table>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
            </div>
        </div>
    </div>
</div>




 