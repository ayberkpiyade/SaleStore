@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Telefon Numarası Ekle";
}

<h2>@ViewData["Title"].</h2>
<form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="form-horizontal headerOffset" style="padding-top:80px;">
    <h2 class="col-md-offset-5"><i class="fa fa-phone" style="margin-right:10px;" aria-hidden="true"></i>Telefon Numarası Ekle</h2>
    <hr />
    <br />

    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"> Telefon Numarası : </label>
        <div class="col-md-6">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <button type="submit" class="btn btn-success">Dogrulama Kodu Yolla</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
