@model SaleStore.Models.Inbox
@{
    ViewData["Title"] = "İletişim";
}

<!-- Site header -->
 
 
    <div class="container page-header headerOffset">    
        <h2 class="text-center">İstek ve şikayetleriniz için bizimle iletişime geçin.</h2>
    </div>
 
<!-- END Site header -->
<!-- Main container -->

    <section>
        <div class="container">

            <div class="row">
                <div class="col-sm-12 col-md-8">
                    <h4><strong>İletişim Formu</strong> </h4>
                    @if (!String.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }
                    <form asp-controller="Home" asp-action="Contact" method="post" enctype="multipart/form-data">
                        
                        <input type="hidden" asp-for="Ip" />
                        
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="Ad" name="FullName">
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control input-lg" placeholder="Telefon" name="Phone">
                        </div>

                        <div class="form-group">
                            <input type="email" class="form-control input-lg" placeholder="Email" name="Email">
                        </div>

                        <div class="form-group">
                            <textarea class="form-control" rows="5" placeholder="Mesajınızı Girin" name="Message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>

                    </form>
                </div>

                <div class="col-sm-12 col-md-5">
                    <h4>İletişim Bilgilerimiz</h4>
                    <div class="highlighted-block">
                        <div class="icon-holder">
                            <h3><i class="fa fa-map-marker" style="margin-right:10px;"></i> Esatpaşa Mah. Fidanlı Sok. No :33 / 4 </h3>
                         

                            <h3><i class="fa fa-phone" style="margin-right:10px;"></i> +90 555 456 45 45</h3>
                     

                            <h3><i class="fa fa-fax"  style="margin-right:10px;"></i>+90 555 456 45 45</h3>
                      

                            <h3><i class="fa fa-envelope" style="margin-right:10px;"></i>info@salestore.com</h3>
                          
                        </div>
                    </div>

                    
                  

                </div>
            </div>

        </div>
    </section>
<div class="gap"></div>
 