    <!-- Modal Login start -->
    <div class="modal signUpContent fade" id="ModalLogin" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times; </button>
                    <h3 class="modal-title-site text-center"> Giriş</h3>
                </div>
                <div class="modal-body">
                    <div class="form-group login-username">
                        <div>
                            <input name="log" id="login-user" class="form-control input" size="20"
                                   placeholder="Kullanıcı Adı" type="text">
                        </div>
                    </div>
                    <div class="form-group login-password">
                        <div>
                            <input name="Password" id="login-password" class="form-control input" size="20"
                                   placeholder="Şifre" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <div class="checkbox login-remember">
                                <label>
                                    <input name="rememberme" value="forever" checked="checked" type="checkbox">
                                    Beni Hatırla
                                </label>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div>
                            <input name="submit" class="btn  btn-block btn-lg btn-primary" value="Giriş" type="submit">
                        </div>
                    </div>
                    <!--userForm-->

                </div>
                <div class="modal-footer">
                    <p class="text-center">
                        Not here before? <a data-toggle="modal" data-dismiss="modal"
                                            href="#ModalSignup">ÇIKIŞ</a> <br>
                        <a href="forgot-password.html"> Şifreni mi unuttun? </a>
                    </p>
                </div>
            </div>
            <!-- /.modal-content -->

        </div>
        <!-- /.modal-dialog -->

    </div>
    

    <div role="dialog" tabindex="-1" id="contact-us" class="modal fade" aria-hidden="true">
        <div class="modal-dialog modal-xs">
            <div class="modal-content">
                
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button"> ×</button>
                    <h3 class="modal-title-site text-center"> Selling Enquiries </h3>
                </div>
                

                <div class="modal-body">
                    <form asp-controller="Home" asp-action="About" method="post" enctype="multipart/form-data" role="form" lpformnum="24">
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="Ad" name="FullName">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control input-lg" placeholder="Email" name="Email">
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control input-lg" placeholder="Telefon" name="Phone">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="5" placeholder="Mesajınızı Girin" name="Message"></textarea>
                        </div>
                        <div class="form-group">
                            <p id="form-error" class="help-block pull-left error text-danger hide">
                                &nbsp; Geçersiz Form
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary btn-lg pull-right btn-block" type="submit">Mesaj Gönder!</button>
                        </div>
                    </form>

                </div>
                
            </div>
        </div>

    </div>

    



