            @section Scripts {
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
                    
                    
                    }


            <script>
                $(document).ready(function () {
                    $('#active').click(function (e) {

                        $('.nav li').removeClass('active');
                        $('.firm').addClass('active');
                        
                    });
                });
             
            </script>

            }
        </div>
    </section>
</main>

<div class="gap"></div>